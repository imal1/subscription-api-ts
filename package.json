{
  "name": "subscription-api-ts",
  "version": "1.1.0",
  "description": "TypeScript订阅转换API服务 - 基于 Mihomo 内核，支持全协议转换 (vless/vmess/trojan/hysteria2/tuic)",
  "main": "dist/index.js",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "build": "tsc",
    "build:with-alias": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev:watch": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "lint": "echo 'Linting not configured'",
    "test": "echo 'Tests not configured'",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build completed successfully'",
    "install:deps": "npm install",
    "setup": "npm run install:deps && npm run build && npm run frontend:build",
    "config:validate": "node -e \"require('dotenv').config(); console.log('✅ 环境变量验证通过:', JSON.stringify(process.env, null, 2))\"",
    "mihomo:check": "node -e \"const {MihomoService} = require('./dist/services/mihomoService.js'); MihomoService.getInstance().checkHealth().then(r => console.log('Mihomo 状态:', r ? '✅ 可用' : '❌ 不可用'))\"",
    "mihomo:version": "node -e \"const {MihomoService} = require('./dist/services/mihomoService.js'); MihomoService.getInstance().getVersion().then(v => console.log('Mihomo 版本:', v))\"",
    "diagnose": "npm run build && npm run mihomo:check && npm run config:validate",
    "frontend:dev": "npm run dev --workspace=frontend",
    "frontend:build": "npm run build --workspace=frontend",
    "frontend:start": "npm run start --workspace=frontend",
    "frontend:lint": "npm run lint --workspace=frontend",
    "dev:all": "concurrently \"npm run dev\" \"npm run frontend:dev\"",
    "build:all": "npm run build && npm run frontend:build"
  },
  "keywords": [
    "subconverter",
    "subscription",
    "clash",
    "sing-box",
    "mihomo",
    "clash-meta",
    "vless",
    "vmess",
    "trojan",
    "hysteria2",
    "tuic",
    "typescript",
    "api",
    "proxy",
    "vpn",
    "protocol-conversion"
  ],
  "author": "imal1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imal1/subscription-api-ts.git"
  },
  "bugs": {
    "url": "https://github.com/imal1/subscription-api-ts/issues"
  },
  "homepage": "https://github.com/imal1/subscription-api-ts#readme",
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "axios": "^1.10.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "fs-extra": "^11.3.0",
    "helmet": "^8.1.0",
    "js-yaml": "^4.1.0",
    "node-cron": "^4.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.8",
    "@types/node-cron": "^3.0.11",
    "concurrently": "^9.1.0",
    "eslint": "^9.30.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
