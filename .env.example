# 服务配置
PORT=3000
NODE_ENV=production
SERVICE_NAME=subscription-api-ts

# sing-box配置 (用逗号分隔多个配置名)
SING_BOX_CONFIGS=vless,hysteria2,trojan,tuic,vmess

# mihomo配置 (clash-meta内核)
# 留空则自动使用 $BASE_DIR/mihomo 目录
MIHOMO_PATH=

# 工作区基础目录配置
# 所有外部文件将存储在此目录下的子目录中
# 默认: $HOME/.config/subscription
BASE_DIR=

# 文件路径配置 (基于 BASE_DIR)
# 默认: $BASE_DIR/www, $BASE_DIR/log
DATA_DIR=
LOG_DIR=
BACKUP_DIR=

# 定时任务配置 (cron格式)
AUTO_UPDATE_CRON=0 */2 * * *

# 网络配置
NGINX_PORT=3080
NGINX_PROXY_PORT=3888
MAX_RETRIES=3
REQUEST_TIMEOUT=30000

# 外部访问配置 (用于访问订阅文件)
# 设置为服务器的公网IP或域名
EXTERNAL_HOST=localhost

# CORS配置
CORS_ORIGIN=*

# 日志级别
LOG_LEVEL=info