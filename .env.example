# 服务配置
PORT=5000
NODE_ENV=production

# sing-box配置 (用逗号分隔多个配置名)
SING_BOX_CONFIGS=vless-reality,hysteria2,trojan,tuic,vmess

# subconverter配置
SUBCONVERTER_URL=http://localhost:25500

# 文件路径配置
STATIC_DIR=/var/www/subscription
LOG_DIR=/var/log/subscription
BACKUP_DIR=/var/www/subscription/backup

# 定时任务配置 (cron格式)
AUTO_UPDATE_CRON=0 */2 * * *

# 网络配置
NGINX_PORT=8080
MAX_RETRIES=3
REQUEST_TIMEOUT=30000

# CORS配置
CORS_ORIGIN=*

# 日志级别
LOG_LEVEL=info