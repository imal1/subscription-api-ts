# 服务配置
PORT=3000
NODE_ENV=production
SERVICE_NAME=subscription-api-ts

# sing-box配置 (用逗号分隔多个配置名)
SING_BOX_CONFIGS=vless,hysteria2,trojan,tuic,vmess

# subconverter配置
SUBCONVERTER_URL=http://localhost:25500

# Clash配置文件名
CLASH_FILENAME=clash.yaml

# 文件路径配置 (根据操作系统自动调整)
# Linux: /var/www/subscription, /var/log/subscription
# macOS: ./data, ./logs
DATA_DIR=./data
LOG_DIR=./logs
BACKUP_DIR=./data/backup

# 定时任务配置 (cron格式)
AUTO_UPDATE_CRON=0 */2 * * *

# 网络配置
NGINX_PORT=3080
NGINX_PROXY_PORT=3888
MAX_RETRIES=3
REQUEST_TIMEOUT=30000

# 外部访问配置 (用于subconverter访问订阅文件)
# 设置为服务器的公网IP或域名
EXTERNAL_HOST=localhost

# CORS配置
CORS_ORIGIN=*

# 日志级别
LOG_LEVEL=info